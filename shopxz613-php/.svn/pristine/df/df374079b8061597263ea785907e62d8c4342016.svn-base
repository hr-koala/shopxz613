<include file="public/header" title="我的直推"  body="page-invite"/>
<link rel="stylesheet" type="text/css" href="__STATIC__/tonghaoran/css/common.css">
<link rel="stylesheet" type="text/css" href="__STATIC__/tonghaoran/css/mr_style.css">

<header id="header" class="">
    <div class="icon-back" onclick="history.back()"></div>
    <h5>我的代理</h5>
</header>

<div class="container">
    <div class="top">
        <div class="num"><span>1{$subordinate[count]}</span></div>
        <div class="name">我的直推（人）</div>
    </div>
    <div class="mine-proxy">
        <div class="mine-offline active">我的直推</div>
        <div class="mine-offline">我的团队</div>
    </div>
    <div class="invite-con">
        <div class="con-top proxy-top-tit">
            <div class="time">注册时间</div>
            <div class="time">手机号码</div>
            <div class="time">当前等级</div>
            <div class="time time1">代理人数</div>
        </div>
        <div class="con-p">
            <volist name="subordinate['invitation_record']" id="record">
                <div class="con-txt">
                    <div class="time">{$record[reg_time]|date='Y-m-d',###}</div>
                    <div class="time">{:substr_replace($record[mobile], '****', 3, 4)}</div>
                    <div class="time">{$record[level_name]}</div>
                    <div class="time time1">5</div>
                </div>
            </volist>
        </div>
        <!--<div class="con-top proxy-top-tit">
            <div class="time">注册时间</div>
            <div class="time">手机号码</div>
            <div class="time">当前等级</div>
        </div>-->
        <!--<div class="con-p">
            <volist name="subordinate['invitation_record']" id="record">
                <div class="con-txt">
                    <div class="time">{$record[reg_time]|date='Y-m-d',###}</div>
                    <div class="time">{:substr_replace($record[mobile], '****', 3, 4)}</div>
                    <div class="time">{$record[level_name]}</div>
                </div>
            </volist>
        </div>-->
    </div>
    <div class="invite-no">
        <img src="__STATIC__/tonghaoran/images/icon_no-daili.png">
        <div class="no-num">
            暂无，去努力邀请好友吧~
        </div>
    </div>
</div>


<include file="public/footer"/>

<script>
    $(function () {
        $(".mine-proxy .mine-offline").on("click",function () {
            $(this).addClass("active").siblings(".mine-offline").removeClass("active")
            // console.log($(this).index())
            if ($(this).index() == 0){
                $(".proxy-top-tit .time1").show()
                $(".con-p .time1").show()
            }
            if ($(this).index() == 1){
                $(".proxy-top-tit .time1").hide()
                $(".con-p .time1").show()
            }
        })
    })
    $(function () {
        console.log($(".top .num span").text())
        if($(".top .num span").text() == 0){
            $(".invite-con").hide()
            $(".invite-no").show()
        }else {
            $(".invite-con").show()
            $(".invite-no").hide()
        }
    })
</script>

</body>
</html>