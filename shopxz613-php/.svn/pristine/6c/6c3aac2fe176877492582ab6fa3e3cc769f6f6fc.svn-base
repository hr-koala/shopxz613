<script type="text/javascript">
    var ajax_return_status = 1; // 标识ajax 请求是否已经回来 可以进行下一次请求
    // 判断输入框是否为空
    function checkForm(){
        var name = $("#addEditNavForm").find("input[name='achievement']").val();
        if($.trim(name) == ''){
            $("#name_err").show();
            return false;
        }

        var royalty_ratio = $("#addEditNavForm").find("input[name='royalty_ratio']").val();
        if($.trim(royalty_ratio) == ''){
            $("#royalty_ratio_err").show();
            return false;
        }

        if (ajax_return_status == 0) {
            return false;
        }
        ajax_return_status = 0;
        $.ajax({
            url:"{:U('Admin/System/add_sales_award')}",
            type:'post',
            dataType:'json',
            data:$('#addEditNavForm').serialize(),
            success:function(data){
                layer.closeAll();
                if(data.status==1){
                    layer.msg(data.msg, {icon: 1},function () {
                        window.location.href = data.url
                    });
                }else{
                    layer.msg(data.msg, {icon: 3});
                    ajax_return_status = 1;
                }
            }
        });
    }
